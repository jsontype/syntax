{{#extend layout title="Wishlist" active="wishlist" isHeader="true" isFooter="true" path="../" isBreadcrumb="true" isSweetalert="true"}}
{{#content "content"}}
<div class="wishlist-page section-padding">
    <div class="container">
        <h5 class="mb-5">My Wishlist</h5>
        <div class="table-responsive">
