<div class="iq-card mb-0">
    <div class="iq-card-body p-0">
        <div class="iq-thumb">
            <a href="javascript:void(0)">
                <img src="{{path}}assets/images/dashboard/{{topImg}}" class="img-fluid w-100 img-border-radius" alt="topImg-{{id}}">
            </a>
        </div>
        <div class="iq-feature-list mt-3">
            <h6 class="font-weight-600 mb-0">{{topTitle}}</h6>
            <p class="mb-0 mt-2">{{topText}}</p>
            <div class="d-flex align-items-center my-2 iq-ltr-direction">
                <p class="mb-0 me-2"><i class="fa-regular fa-eye me-1"></i>{{topView}}</p>
                <p class="mb-0 "><i class="fa-solid fa-download ms-2 me-1"></i>{{topDownload}}</p>
            </div>
        </div>
    </div>
</div>