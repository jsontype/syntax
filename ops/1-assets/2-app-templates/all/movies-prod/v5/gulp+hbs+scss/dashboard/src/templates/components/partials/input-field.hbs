<div class="form-group px-3 {{class}}">
    <label class="form-label flex-grow-1" for="{{label}}">
        <strong>{{label}}</strong> {{#compare isRequired '==' "true"}}<span class="text-danger">*</span>{{/compare}}:
    </label>

    <!-- textarea input -->
    {{#compare type '==' "textarea"}}
    <textarea id="{{label}}" class="form-control" placeholder="{{placeholder}}">{{value}}</textarea>
    {{else}}
    <!-- toggle switch -->
    {{#compare type '==' "toggle"}}
        <div class="form-check form-switch ms-2">
            <input id="{{label}}" class="form-check-input" type="checkbox" {{value}} />
        </div>
    {{else}}
    <!-- common inputs -->
    <input id="{{label}}" type="{{type}}" class="form-control {{className}}" placeholder="{{placeholder}}" value="{{value}}" min="{{min}}"
       multiple="{{isMulti}}" />
    {{/compare}}
    {{/compare}}
</div>