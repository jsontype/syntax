<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#cast-modal">
    <i class="fa-solid fa-square-plus me-2"></i>Add Cast / Crew
</button>

<div class="modal fade" id="cast-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cast-modal-label">Add Cast/Crew</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <form action="" class="section-form">
                    <div class="row">
                        <div class="col-sm-12">
                            {{> components/partials/input-field label="Person" isRequied="true" type="text"
                            placeholder="Enter Name"}}
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group px-3 d-flex flex-column">
                                <label class="form-label flex-grow-1"
                                    for="cast-occupation"><strong>Occupation:</strong></label>
                                <select id="cast-occupation" type="select" class="form-control select2-basic-multiple"
                                    placeholder="Select Occupation">
                                    <option>Cast</option>
                                    <option>Crew</option>
                                    <option>Production</option>
                                    <option>Director</option>
                                    <option>Actor</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            {{> components/partials/input-field label="As" isRequied="true" type="text"
                            placeholder="Played as"}}
                        </div>
                        <div class="col-sm-12">
                            {{> components/partials/input-field label="Status"
                            type="toggle"
                            placeholder=""
                            class="d-flex justify-content-between"}}
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>