{{#extend layout title="Error 404" active="error-page-one" path="./"}}
{{#content "content"}}

<div class="section-padding vh-100">
  <div class="container h-100">
    <div class="row h-100 align-items-center">
      <div class="col-lg-2"></div>
      <div class="col-lg-8">
        <img src="{{path}}assets/images/pages/404.webp" class="" alt="404" loading="lazy">
        <div class="py-3 text-center mt-5 mb-4" style="background: url('{{path}}assets/images/pages/404-bg-patten.webp'); background-repeat: no-repeat; background-position: center center; background-size: 68% auto;">
          <h4 class="fw-semibold mb-0">Oops! something went wrong</h4>
        </div>
        <p class="text-center">We’re sorry, it looks like the page you’re looking for isn’t in our system</p>
        <div class="text-center mt-4 pt-3">
          {{> components/widgets/custom-button button-url="index.html" button-title="Back to home"}}
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>
</div>

{{/content}}
{{/extend}}