<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sbs.starter.dao.ArticleDao">
	<select id="getList" parameterType="map" resultType="Article">
		SELECT *
		FROM starter_bbs1 ORDER BY id DESC
	</select>

	<select id="getOne" parameterType="long" resultType="Article">
		SELECT *
		FROM starter_bbs1
		WHERE id = #{id}
	</select>

	<select id="getTotalCount" parameterType="map" resultType="int">
		SELECT COUNT(*)
		FROM starter_bbs1
	</select>

	<delete id="delete" parameterType="long">
		DELETE FROM starter_bbs1
		WHERE id = #{id}
	</delete>

	<insert id="add" parameterType="map" useGeneratedKeys="true"
		keyProperty="id">
		INSERT INTO starter_bbs1
		SET regDate = NOW(),
		title = #{title},
		body = #{body}
	</insert>

	<update id="modify" parameterType="map">
		UPDATE starter_bbs1
		SET title = #{title},
		body = #{body}
		WHERE id = #{id}
	</update>

	<update id="hitUp" parameterType="long">
		UPDATE starter_bbs1
		SET hit = hit + 1
		WHERE id = #{id}
	</update>
</mapper>